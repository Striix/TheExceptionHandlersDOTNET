        <tr>
            <td>
                @Html.LabelFor(x => x.gsm)
            </td>
            <td>
                @Html.TextBoxFor(x => x.gsm)
            </td>
            <td>
                @Html.ValidationMessageFor(x => x.gsm)
            </td>
        </tr>
        <tr>
            <td>
                <br />
                <button type="submit">
                    <span>Opslaan</span>
                </button>
            </td>
        </tr>
                
       
